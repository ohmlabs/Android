<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list">
	<RelativeLayout
    	android:layout_width="match_parent"
    	android:layout_height="55dp"
    	android:background="@drawable/facebook_titlebar" >
    	<ImageView
      		android:id="@+id/backButton"
        	android:layout_width="40dp"
        	android:layout_height="40dp"
        	android:layout_centerVertical="true"
        	android:src="@drawable/bs_back"/>
    	<TextView 
        	android:id="@+id/userName"
        	android:layout_width="200dp"
        	android:layout_height="40dp"
        	android:layout_margin="5dp"
        	android:textSize="20dp"
        	android:text="Loading User Info"
        	android:gravity="center"
        	android:layout_centerInParent="true"/>
    	<com.ohmslab.facebook.LoginButton
	    android:id="@+id/loginLogout"
	    android:layout_width="80dp"
	    android:layout_height="wrap_content"
	    android:layout_centerVertical="true"
	    android:layout_alignParentRight="true"/>
	</RelativeLayout>    
	
	<RelativeLayout
    	android:layout_width="match_parent"
    	android:layout_height="200dp" 
    	android:background="@drawable/yt_post_bg"
    	android:layout_centerInParent="true">
    	<ImageView
      		android:id="@+id/npArt"
        	android:layout_width="80dp"
        	android:layout_height="80dp"
        	android:layout_margin="5dp"
        	android:layout_centerVertical="true"/>
    	<TextView 
        	android:id="@+id/npSongName"
        	android:layout_width="200dp"
        	android:layout_height="40dp"
        	android:layout_margin="5dp"
        	android:textSize="20dp"
        	android:gravity="center"
        	android:layout_alignParentRight="true"/>
    	<TextView 
        	android:id="@+id/npArtistName"
        	android:layout_width="200dp"
        	android:layout_height="40dp"
        	android:layout_margin="5dp"
        	android:textSize="15dp"
        	android:gravity="center"
        	android:layout_alignParentRight="true"
        	android:layout_below="@id/npSongName"/>
    	<ImageView
    	    android:id="@+id/postButton"
    	    android:layout_width="fill_parent"
    	    android:layout_height="wrap_content"
    	    android:src="@drawable/yt_post_button"
    	    android:layout_alignParentBottom="true"
    	    android:layout_margin="5dp"/>
	</RelativeLayout> 
	

</RelativeLayout>